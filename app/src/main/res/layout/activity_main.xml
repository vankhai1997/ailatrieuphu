<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="firstproject.t3h.com.ailatrieuphu.MainActivity">
<ImageView
    android:layout_width="match_parent"
    android:scaleType="centerCrop"
    android:src="@drawable/background_online_blank"
    android:layout_height="match_parent" />

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/retry"
        android:layout_width="wrap_content"
        android:layout_marginTop="80dp"
        android:src="@drawable/atp_icon_retry"
        android:layout_height="wrap_content" />
    <Button
       android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:text="Now play"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="30sp"
        android:id="@+id/btnplay"
        android:layout_gravity="center"
        android:background="@drawable/drawable_press_play"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="high scores"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="30sp"
        android:id="@+id/btnhightscores"
        android:background="@drawable/drawable_press_highscores"
        android:layout_height="wrap_content" />
</LinearLayout>
</FrameLayout>
